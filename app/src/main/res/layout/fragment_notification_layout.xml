<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:weightSum="6"
        android:padding="8dp">
        <EditText
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:hint="Name"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/btnNameSpeak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
         />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytName"
        android:layout_margin="8dp"
        android:weightSum="6"
        android:padding="8dp">
        <EditText
            android:id="@+id/textViewPlace"
            android:layout_width="0dp"
            android:hint="Place"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/btnPlaceSpeak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lytMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytPlace"
        android:layout_margin="8dp"
        android:weightSum="6"
        android:padding="8dp">
        <EditText
            android:id="@+id/textViewMobile"
            android:layout_width="0dp"
            android:hint="Mobile"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/btnMobileSpeak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytPurpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytMobile"
        android:layout_margin="8dp"
        android:weightSum="6"
        android:padding="8dp">
        <EditText
            android:id="@+id/textViewPurpose"
            android:layout_width="0dp"
            android:hint="Purpose"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/btnPurposeSpeak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            />
    </LinearLayout>



    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytPlace" />

</androidx.constraintlayout.widget.ConstraintLayout>